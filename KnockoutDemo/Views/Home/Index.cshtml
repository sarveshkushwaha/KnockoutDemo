@*this will be body part*@
<div class="container">

    <!-- Main component for a primary marketing message or call to action -->
    <div class="jumbotron">
        <h1>Knockout example</h1>

    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Knockout Obeservable</h3>
                    <span class="pull-right">
                        <!-- Tabs -->
                        <ul class="nav panel-tabs">
                            <li class="active"><a href="#Observable" data-toggle="tab">Observable</a></li>
                            <li><a href="#ObservableArrayDiv" data-toggle="tab">Observable Arrays</a></li>
                            <li><a href="#ComputedObservableDiv" data-toggle="tab">Dependent observable</a></li>

                        </ul>
                    </span>
                </div>
                <div class="panel-body">
                    <div class="tab-content">
                        <div class="tab-pane active" id="Observable">


                            <ul class="list-group">
                                <li class="list-group-item">Observable are functions
                                </li>

                                <li class="list-group-item">
                                    <span class="label label-default ">Get Value from Obesrvable</span>

                                    viewModel.name();


                                </li>
                                <li class="list-group-item">
                                    <span class="label label-default ">Set Value In Obesrvable</span>

                                    viewModel.name("sarvesh");
                                </li>
                            </ul>



                            <form class="form-inline">
                                <span data-bind="text: name"></span>


                                <div class="form-group">
                                    <div class="input-group" style="width: 220px;">
                                        <span class="input-group-addon">Name</span>

                                        <input type="text" class="form-control " placeholder="Name" data-bind="value: name">
                                    </div>
                                </div>

                                @*<div class="form-group"><input type="text" class="form-control" placeholder="Works with" style="width: 100px;"/></div>*@

                                @*<button type="button" class="btn btn-primary btn-sm" data-bind="click: changeName">change name </button>*@

                            </form>
                        </div>
                        <div class="tab-pane" id="ObservableArrayDiv">

                            
                            <div class="col-md-12">
                                <input type="text" data-bind="value: itemToAdd" />
                                <button class="btn btn-primary btn-sm" data-bind="click: addItem">Add</button>

                            </div>

                            <div class="col-md-3" style="padding-top: 10px;">
                                <ul class="list-group" data-bind="foreach: items">
                                    <li class="list-group-item"><span data-bind="text: name" /></li>
                                </ul>
                            </div>
                        </div>
                        <div class="tab-pane" id="ComputedObservableDiv">
                            
                            First Name : <span data-bind="text:firstName"></span><br />
                            Last Name : <span data-bind="text: lastName"></span><br />
                            Full Name : <span data-bind="text: fullName"></span><br />
                        </div>
                        </div>
                        
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

